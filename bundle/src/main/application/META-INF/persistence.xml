    <persistence-unit name="mysql-jpa" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/pointsDS</jta-data-source>
        <class>points.dto.user_old.Contact</class>
        <class>points.dto.user_old.UserRelation</class>
        <class>points.dto.user_old.VisibilityGroup</class>
        <properties>
            <property name="hibernate.transaction.jta.platform"
                      value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <property name="hibernate.id.new_generator_mappings" value="false" />
        </properties>

    </persistence-unit>

</persistence>